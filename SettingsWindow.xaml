<Window x:Class="Mideej.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mideej"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="Settings - Mideej"
        Height="889"
        Width="700"
        MinHeight="500"
        MinWidth="600"
        Background="{DynamicResource BackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome 
            CaptionHeight="0"
            ResizeBorderThickness="5"
            CornerRadius="12"
            GlassFrameThickness="0"/>
    </shell:WindowChrome.WindowChrome>

    <Border BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Background="{DynamicResource BackgroundBrush}" Margin="0,0,0,5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="202*"/>
                <ColumnDefinition Width="147*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Window Title -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="20,0">
                        <TextBlock Text="âš™"
                                   FontSize="24"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Settings"
                                   Style="{StaticResource TitleTextBlock}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Status Message -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding StatusMessage}"
                               Style="{StaticResource SubtitleTextBlock}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="12"/>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="12">
                        <Button Content="âœ•"
                                Style="{StaticResource IconButton}"
                                Command="{Binding CloseCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                Margin="4,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="30,20" Grid.ColumnSpan="2">
                <StackPanel>
                    <!-- Appearance Section -->
                    <TextBlock Text="Appearance"
                               Style="{StaticResource TitleTextBlock}"
                               FontSize="18"
                               Margin="0,0,0,16"/>

                    <Border Style="{StaticResource Card}"
                            Padding="20"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <!-- Theme Selection -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Theme"
                                           Style="{StaticResource LabelTextBlock}"
                                           VerticalAlignment="Center"/>

                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding AvailableThemes}"
                                          SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                                          Style="{StaticResource ModernComboBox}"
                                          HorizontalAlignment="Left"
                                          Width="200">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DisplayName}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>

                            <!-- Font Size -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Font Size"
                                           Style="{StaticResource LabelTextBlock}"
                                           VerticalAlignment="Center"/>

                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding FontSizeOptions}"
                                          SelectedIndex="{Binding SelectedFontSizeIndex, Mode=TwoWay}"
                                          Style="{StaticResource ModernComboBox}"
                                          HorizontalAlignment="Left"
                                          Width="200">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DisplayName}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Behavior Section -->
                    <TextBlock Text="Behavior"
                               Style="{StaticResource TitleTextBlock}"
                               FontSize="18"
                               Margin="0,0,0,16"/>

                    <Border Style="{StaticResource Card}"
                            Padding="20"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <!-- Minimize to Tray -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Minimize to Tray"
                                               Style="{StaticResource LabelTextBlock}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Hide window to system tray when minimized"
                                               Style="{StaticResource SubtitleTextBlock}"
                                               FontSize="11"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                          IsChecked="{Binding MinimizeToTray}"
                                          VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Start with Windows -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Start with Windows"
                                               Style="{StaticResource LabelTextBlock}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Launch Mideej automatically when Windows starts"
                                               Style="{StaticResource SubtitleTextBlock}"
                                               FontSize="11"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                          IsChecked="{Binding StartWithWindows}"
                                          VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Start Minimized -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Start Minimized"
                                               Style="{StaticResource LabelTextBlock}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Start in minimized state (requires 'Start with Windows')"
                                               Style="{StaticResource SubtitleTextBlock}"
                                               FontSize="11"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                          IsChecked="{Binding StartMinimized}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- MIDI Configuration Section -->
                    <TextBlock Text="MIDI Configuration"
                               Style="{StaticResource TitleTextBlock}"
                               FontSize="18"
                               Margin="0,0,0,16"/>

                    <Border Style="{StaticResource Card}"
                            Padding="20"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <!-- Controller Presets -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Controller Presets"
                                               Style="{StaticResource LabelTextBlock}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Quickly load a preset for popular MIDI controllers"
                                               Style="{StaticResource SubtitleTextBlock}"
                                               FontSize="11"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding ControllerPresets}"
                                          SelectedItem="{Binding SelectedPreset, Mode=TwoWay}"
                                          Style="{StaticResource ModernComboBox}"
                                          Width="200"
                                          VerticalAlignment="Center">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DisplayName}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>

                            <!-- Manage Mappings -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="MIDI Mappings"
                                               Style="{StaticResource LabelTextBlock}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="View and manage your MIDI controller mappings"
                                               Style="{StaticResource SubtitleTextBlock}"
                                               FontSize="11"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="1"
                                        Content="Manage..."
                                        Style="{StaticResource ModernButton}"
                                        Command="{Binding ManageMappingsCommand}"
                                        VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Import Config -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Import Controller Config"
                                               Style="{StaticResource LabelTextBlock}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Load a preset or saved configuration file"
                                               Style="{StaticResource SubtitleTextBlock}"
                                               FontSize="11"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="1"
                                        Content="ðŸ“¥ Import"
                                        Style="{StaticResource ModernButton}"
                                        Command="{Binding ImportControllerConfigCommand}"
                                        VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Export Config -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Export Controller Config"
                                               Style="{StaticResource LabelTextBlock}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Save your current configuration to share or backup"
                                               Style="{StaticResource SubtitleTextBlock}"
                                               FontSize="11"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="1"
                                        Content="ðŸ“¤ Export"
                                        Style="{StaticResource ModernButton}"
                                        Command="{Binding ExportControllerConfigCommand}"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Bottom Action Bar -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,12,12"
                    Padding="30,16" Grid.ColumnSpan="2" Margin="0,747,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Changes are saved automatically"
                               Style="{StaticResource SubtitleTextBlock}"
                               FontSize="11"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="Apply"
                                Style="{StaticResource ModernButton}"
                                Command="{Binding ApplyCommand}"
                                Margin="0,0,8,0"/>
                        <Button Content="Close"
                                Style="{StaticResource ModernButton}"
                                Command="{Binding CloseCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
