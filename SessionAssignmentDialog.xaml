<Window x:Class="Mideej.SessionAssignmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Mideej.Models"
        mc:Ignorable="d"
        Title="Assign Audio Session"
        Height="700"
        Width="900"
        MinHeight="600"
        MinWidth="800"
        Background="{DynamicResource BackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Background="{DynamicResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Assign Audio Session"
                               Style="{StaticResource TitleTextBlock}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="20,0"/>

                    <Button Content="âœ•"
                            Style="{StaticResource IconButton}"
                            Click="CloseButton_Click"
                            HorizontalAlignment="Right"
                            Margin="12"/>
                </Grid>
            </Border>

            <!-- Session List -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Instructions -->
                <TextBlock Grid.Row="0"
                           Text="Select audio sessions to assign to this channel:"
                           Style="{StaticResource LabelTextBlock}"
                           Margin="0,0,0,12"/>

                <!-- Special Options -->
                <Border Grid.Row="1"
                        Style="{StaticResource Card}"
                        Padding="12"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Special Options"
                                   Style="{StaticResource LabelTextBlock}"
                                   FontWeight="Bold"
                                   Margin="0,0,0,8"/>

                        <CheckBox Content="ðŸŽ¯ Focused App (Auto-follow active window)"
                                  IsChecked="{Binding IsFocusedAppSelected}"
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,0,0,8"/>

                        <CheckBox Content="ðŸ“¦ Unmapped Applications (All unassigned apps)"
                                  IsChecked="{Binding IsUnmappedAppsSelected}"
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Manual Application Entry -->
                <Border Grid.Row="2"
                        Style="{StaticResource Card}"
                        Padding="12"
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Manual Entry:"
                                   Style="{StaticResource LabelTextBlock}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                        <TextBox Grid.Column="1"
                                 Text="{Binding ManualApplicationName, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{DynamicResource SurfaceBrush}"
                                 Foreground="{DynamicResource TextBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 BorderThickness="1"
                                 Padding="8,6"
                                 VerticalContentAlignment="Center"
                                 FontSize="13"
                                 ToolTip="Enter application name (e.g., chrome.exe, spotify.exe)"/>
                    </Grid>
                </Border>

                <!-- Three Column Layout -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Applications Column -->
                    <Border Grid.Column="0"
                            Style="{StaticResource Card}"
                            Margin="0,0,4,0"
                            Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="APPLICATIONS"
                                       Style="{StaticResource LabelTextBlock}"
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Foreground="{DynamicResource AccentBrush}"
                                       Margin="0,0,0,8"/>

                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding ApplicationSessions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:AudioSessionInfo}">
                                            <Border Style="{StaticResource Card}"
                                                    Margin="0,0,0,4"
                                                    Padding="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding IsSelected}"
                                                              VerticalAlignment="Center"
                                                              Foreground="{DynamicResource TextBrush}"
                                                              Margin="0,0,8,0"/>

                                                    <StackPanel Grid.Column="1"
                                                                VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   Style="{StaticResource LabelTextBlock}"
                                                                   FontWeight="SemiBold"
                                                                   FontSize="12"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding ProcessName}"
                                                                   Style="{StaticResource SubtitleTextBlock}"
                                                                   FontSize="9"
                                                                   Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Input Devices Column -->
                    <Border Grid.Column="1"
                            Style="{StaticResource Card}"
                            Margin="4,0,4,0"
                            Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="INPUT DEVICES"
                                       Style="{StaticResource LabelTextBlock}"
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Foreground="{DynamicResource AccentBrush}"
                                       Margin="0,0,0,8"/>

                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding InputDeviceSessions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:AudioSessionInfo}">
                                            <Border Style="{StaticResource Card}"
                                                    Margin="0,0,0,4"
                                                    Padding="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding IsSelected}"
                                                              VerticalAlignment="Center"
                                                              Foreground="{DynamicResource TextBrush}"
                                                              Margin="0,0,8,0"/>

                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding DisplayName}"
                                                               Style="{StaticResource LabelTextBlock}"
                                                               FontWeight="SemiBold"
                                                               FontSize="12"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Output Devices Column -->
                    <Border Grid.Column="2"
                            Style="{StaticResource Card}"
                            Margin="4,0,0,0"
                            Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="OUTPUT DEVICES"
                                       Style="{StaticResource LabelTextBlock}"
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Foreground="{DynamicResource AccentBrush}"
                                       Margin="0,0,0,8"/>

                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding MasterAndOutputSessions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:AudioSessionInfo}">
                                            <Border Style="{StaticResource Card}"
                                                    Margin="0,0,0,4"
                                                    Padding="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding IsSelected}"
                                                              VerticalAlignment="Center"
                                                              Foreground="{DynamicResource TextBrush}"
                                                              Margin="0,0,8,0"/>

                                                    <StackPanel Grid.Column="1"
                                                                VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   Style="{StaticResource LabelTextBlock}"
                                                                   FontWeight="SemiBold"
                                                                   FontSize="12"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding ProcessName}"
                                                                   Style="{StaticResource SubtitleTextBlock}"
                                                                   FontSize="9"
                                                                   Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Bottom Buttons -->
            <Border Grid.Row="2"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,12,12"
                    Padding="20,12">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Apply"
                            Style="{StaticResource ModernButton}"
                            Click="ApplyButton_Click"
                            Width="100"
                            Margin="0,0,12,0"/>
                    <Button Content="Cancel"
                            Style="{StaticResource ModernButton}"
                            Click="CancelButton_Click"
                            Width="100"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
