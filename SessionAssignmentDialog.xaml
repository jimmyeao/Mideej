<Window x:Class="Mideej.SessionAssignmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Mideej.Models"
        mc:Ignorable="d"
        Title="Assign Audio Session"
        Height="600"
        Width="500"
        MinHeight="400"
        MinWidth="400"
        Background="{DynamicResource BackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Background="{DynamicResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Assign Audio Session"
                               Style="{StaticResource TitleTextBlock}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="20,0"/>

                    <Button Content="âœ•"
                            Style="{StaticResource IconButton}"
                            Click="CloseButton_Click"
                            HorizontalAlignment="Right"
                            Margin="12"/>
                </Grid>
            </Border>

            <!-- Session List -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Instructions -->
                <TextBlock Grid.Row="0"
                           Text="Select an audio session to assign to this channel:"
                           Style="{StaticResource LabelTextBlock}"
                           Margin="0,0,0,12"/>

                <!-- Sessions List -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding AvailableSessions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:AudioSessionInfo}">
                                <Border Style="{StaticResource Card}"
                                        Margin="0,0,0,8"
                                        Padding="12"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="SessionItem_Click"
                                        Tag="{Binding}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon/Type Indicator -->
                                        <Border Grid.Column="0"
                                                Width="40"
                                                Height="40"
                                                CornerRadius="8"
                                                Background="{DynamicResource AccentBrush}"
                                                Margin="0,0,12,0">
                                            <TextBlock Text="{Binding SessionType, Converter={StaticResource SessionTypeIconConverter}}"
                                                       FontSize="20"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Session Info -->
                                        <StackPanel Grid.Column="1"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DisplayName}"
                                                       Style="{StaticResource LabelTextBlock}"
                                                       FontWeight="Bold"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding ProcessName}"
                                                       Style="{StaticResource SubtitleTextBlock}"
                                                       FontSize="11"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- Session Type Badge -->
                                        <Border Grid.Column="2"
                                                Background="{DynamicResource SurfaceBrush}"
                                                CornerRadius="4"
                                                Padding="8,4">
                                            <TextBlock Text="{Binding SessionType}"
                                                       Style="{StaticResource SubtitleTextBlock}"
                                                       FontSize="10"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Bottom Buttons -->
            <Border Grid.Row="2"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,12,12"
                    Padding="20,12">
                <Grid>
                    <Button Content="Cancel"
                            Style="{StaticResource ModernButton}"
                            Click="CancelButton_Click"
                            HorizontalAlignment="Right"
                            Width="100"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
