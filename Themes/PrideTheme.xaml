<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

 <!-- Pride Theme - Dark neutral surfaces with rainbow accents -->
 <!-- Base Colors (neutrals) -->
 <Color x:Key="BackgroundColor">#121318</Color>
 <Color x:Key="SurfaceColor">#191B22</Color>
 <Color x:Key="SurfaceHighlightColor">#262A33</Color>
 <Color x:Key="TextPrimaryColor">#E5E7EB</Color>
 <Color x:Key="TextSecondaryColor">#9CA3AF</Color>
 <Color x:Key="BorderColor">#374151</Color>

 <!-- Semantic Colors -->
 <Color x:Key="ErrorColor">#EF4444</Color>
 <Color x:Key="WarningColor">#F59E0B</Color>
 <Color x:Key="SuccessColor">#22C55E</Color>

 <!-- Keep these color keys for compatibility, though brushes below are what styles use -->
 <Color x:Key="PrimaryColor">#FFFFFF</Color>
 <Color x:Key="PrimaryDarkColor">#CCCCCC</Color>
 <Color x:Key="AccentColor">#FFFFFF</Color>

 <!-- Neutral Brushes -->
 <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
 <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
 <SolidColorBrush x:Key="SurfaceHighlightBrush" Color="{StaticResource SurfaceHighlightColor}"/>
 <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
 <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
 <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextPrimaryColor}"/>
 <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
 <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
 <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
 <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>

 <!-- Rainbow Brushes (used by buttons, slider thumbs, selections, etc.) -->
 <!-- Horizontal rainbow sweep -->
 <LinearGradientBrush x:Key="PrimaryBrush" StartPoint="0,0" EndPoint="1,0">
 <GradientStop Color="#FF3B30" Offset="0.00"/> <!-- Red -->
 <GradientStop Color="#FF9500" Offset="0.17"/> <!-- Orange -->
 <GradientStop Color="#FFD60A" Offset="0.33"/> <!-- Yellow -->
 <GradientStop Color="#34C759" Offset="0.50"/> <!-- Green -->
 <GradientStop Color="#007AFF" Offset="0.67"/> <!-- Blue -->
 <GradientStop Color="#5856D6" Offset="0.83"/> <!-- Indigo -->
 <GradientStop Color="#AF52DE" Offset="1.00"/> <!-- Violet -->
 </LinearGradientBrush>

 <!-- Darker rainbow for hover/pressed states -->
 <LinearGradientBrush x:Key="PrimaryDarkBrush" StartPoint="0,0" EndPoint="1,0">
 <GradientStop Color="#CC2E24" Offset="0.00"/>
 <GradientStop Color="#CC7700" Offset="0.17"/>
 <GradientStop Color="#CCAD08" Offset="0.33"/>
 <GradientStop Color="#279947" Offset="0.50"/>
 <GradientStop Color="#0060C7" Offset="0.67"/>
 <GradientStop Color="#4745AB" Offset="0.83"/>
 <GradientStop Color="#8C41B3" Offset="1.00"/>
 </LinearGradientBrush>

 <!-- Accent rainbow used in various highlights -->
 <LinearGradientBrush x:Key="AccentBrush" StartPoint="0,0" EndPoint="1,1">
 <GradientStop Color="#FF3B30" Offset="0.00"/>
 <GradientStop Color="#FF9F0A" Offset="0.20"/>
 <GradientStop Color="#FFD60A" Offset="0.35"/>
 <GradientStop Color="#32D74B" Offset="0.50"/>
 <GradientStop Color="#0A84FF" Offset="0.70"/>
 <GradientStop Color="#5E5CE6" Offset="0.85"/>
 <GradientStop Color="#BF5AF2" Offset="1.00"/>
 </LinearGradientBrush>
</ResourceDictionary>
