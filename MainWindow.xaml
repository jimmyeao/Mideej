<Window x:Class="Mideej.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mideej"
        xmlns:models="clr-namespace:Mideej.Models"
        xmlns:controls="clr-namespace:Mideej.Controls"
        xmlns:viewmodels="clr-namespace:Mideej.ViewModels"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="{Binding WindowHeight, Mode=TwoWay}"
        Width="{Binding WindowWidth, Mode=TwoWay}"
        Left="{Binding WindowLeft, Mode=TwoWay}"
        Top="{Binding WindowTop, Mode=TwoWay}"
        WindowState="{Binding WindowState, Mode=TwoWay}"
        MinHeight="500"
        MinWidth="{Binding MinWindowWidth}"
        Background="{DynamicResource BackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">
    
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome 
            CaptionHeight="0"
            ResizeBorderThickness="5"
            CornerRadius="12"
            GlassFrameThickness="0"/>
    </shell:WindowChrome.WindowChrome>

    <Border BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Background="{DynamicResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Title -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="20,0">
                        <TextBlock Text="🎛️"
                                   FontSize="24"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Mideej"
                                   Style="{StaticResource TitleTextBlock}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Status Message -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding StatusMessage}"
                               Style="{StaticResource SubtitleTextBlock}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="12">
                        <Button Content="—"
                                Style="{StaticResource IconButton}"
                                Click="MinimizeButton_Click"
                                Margin="4,0"/>
                        <Button Content="□"
                                Style="{StaticResource IconButton}"
                                Click="MaximizeButton_Click"
                                Margin="4,0"/>
                        <Button Content="✕"
                                Style="{StaticResource IconButton}"
                                Click="CloseButton_Click"
                                Margin="4,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Toolbar -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1"
                    Padding="20,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- MIDI Device Selection -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal">
                        <TextBlock Text="MIDI Device:"
                                   Style="{StaticResource LabelTextBlock}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <ComboBox ItemsSource="{Binding AvailableMidiDevices}"
                                  SelectedItem="{Binding SelectedMidiDevice}"
                                  Style="{StaticResource ModernComboBox}"
                                  Width="200"
                                  Margin="0,0,8,0"/>
                        <Button Content="Connect"
                                Command="{Binding ConnectMidiDeviceCommand}"
                                Style="{StaticResource ModernButton}"
                                Visibility="{Binding IsMidiConnected, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}"
                                Margin="0,0,4,0"/>
                        <Button Content="Disconnect"
                                Command="{Binding DisconnectMidiDeviceCommand}"
                                Style="{StaticResource ModernButton}"
                                Visibility="{Binding IsMidiConnected, Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="0,0,4,0"/>
                        <Button Content="🔄"
                                Command="{Binding RefreshMidiDevicesCommand}"
                                Style="{StaticResource IconButton}"
                                ToolTip="Refresh MIDI Devices"/>
                    </StackPanel>

                    <!-- Right Side Controls -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal">
                        <Button Content="⚙" 
                                Style="{StaticResource IconButton}"
                                ToolTip="Settings"
                                Command="{Binding OpenSettingsCommand}"
                                Margin="0,0,8,0"/>
                        <Button Content="+ Channel"
                                Command="{Binding AddChannelCommand}"
                                Style="{StaticResource ModernButton}"
                                Margin="0,0,8,0"/>
                        <ComboBox ItemsSource="{Binding AvailableThemes}"
                                  SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                                  Style="{StaticResource ModernComboBox}"
                                  ToolTip="Select Theme"
                                  Width="180"
                                  Margin="8,0,0,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:ThemeOption}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" FontSize="14" />
                                        <TextBlock Text="{Binding DisplayName}" Margin="6,0,0,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content - Channels -->
            <ScrollViewer Grid.Row="2"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Margin="20">
                <ItemsControl ItemsSource="{Binding Channels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:ChannelControl DataContext="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Media Transport Controls -->
            <Border Grid.Row="3"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="20,8,20,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Action Buttons (Play, Pause, Prev, Next) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="⏮" Style="{StaticResource IconButton}" Command="{Binding TransportPreviousCommand}" ToolTip="Previous Track" Margin="4"/>
                        <Button Content="▶" Style="{StaticResource IconButton}" Command="{Binding TransportPlayCommand}" ToolTip="Play" Margin="4"/>
                        <Button Content="⏸" Style="{StaticResource IconButton}" Command="{Binding TransportPauseCommand}" ToolTip="Pause" Margin="4"/>
                        <Button Content="⏭" Style="{StaticResource IconButton}" Command="{Binding TransportNextCommand}" ToolTip="Next Track" Margin="4"/>
                    </StackPanel>

                    <!-- Single Map button with context menu -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="MapTransportButton" Content="Map Transport" Style="{StaticResource ModernButton}" Margin="4" Click="MapTransportButton_Click">
                            <Button.ContextMenu>
                                <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                    <MenuItem Header="Map Play" Command="{Binding StartTransportMappingCommand}" CommandParameter="TransportPlay"/>
                                    <MenuItem Header="Map Pause" Command="{Binding StartTransportMappingCommand}" CommandParameter="TransportPause"/>
                                    <MenuItem Header="Map Previous Track" Command="{Binding StartTransportMappingCommand}" CommandParameter="TransportPrevious"/>
                                    <MenuItem Header="Map Next Track" Command="{Binding StartTransportMappingCommand}" CommandParameter="TransportNext"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Bottom Status Bar -->
            <Border Grid.Row="4"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,12,12"
                    Padding="20,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Connection Status -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="{Binding IsMidiConnected, Converter={StaticResource ConnectionStatusConverter}, FallbackValue=#EF4444}"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="{Binding IsMidiConnected, Converter={StaticResource ConnectionStatusTextConverter}, FallbackValue='Disconnected'}" Style="{StaticResource SubtitleTextBlock}" FontSize="12"/>
                    </StackPanel>

                    <!-- Mapping Mode Indicator -->
                    <Border Grid.Column="1" Background="{DynamicResource AccentBrush}" CornerRadius="4" Padding="12,4" HorizontalAlignment="Center" Visibility="{Binding IsMappingModeActive, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙ MAPPING MODE ACTIVE" Foreground="White" FontWeight="Bold" FontSize="12" Margin="0,0,12,0"/>
                            <Button Content="Cancel" Command="{Binding CancelMappingModeCommand}" Background="#EF4444" Foreground="White" BorderThickness="0" Padding="8,2" FontSize="11" Cursor="Hand"/>
                        </StackPanel>
                    </Border>

                    <!-- App Info -->
                    <TextBlock Grid.Column="2" Text="v1.0.0" Style="{StaticResource SubtitleTextBlock}" FontSize="10"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
