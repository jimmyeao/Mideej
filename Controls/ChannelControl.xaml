<UserControl x:Class="Mideej.Controls.ChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Mideej.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="120"
             Width="120">
    <Border Style="{StaticResource Card}" Margin="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Channel Name -->
            <TextBlock Grid.Row="0"
                       Text="{Binding Name}"
                       Style="{StaticResource LabelTextBlock}"
                       TextAlignment="Center"
                       Margin="0,0,0,8"
                       TextTrimming="CharacterEllipsis"/>

            <!-- VU Meter and Slider Container -->
            <Grid Grid.Row="1" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- VU Meter -->
                <local:VuMeter Grid.Column="0"
                               PeakLevel="{Binding PeakLevel}"
                               Width="30"/>

                <!-- Volume Slider -->
                <Slider Grid.Column="2"
                        Value="{Binding Volume, Mode=TwoWay}"
                        Style="{StaticResource ModernSlider}"
                        Orientation="Vertical"
                        Minimum="0"
                        Maximum="1"
                        TickFrequency="0.1"
                        IsSnapToTickEnabled="False"/>
            </Grid>

            <!-- Volume Display -->
            <TextBlock Grid.Row="2"
                       Text="{Binding Volume, Converter={StaticResource PercentageConverter}}"
                       Style="{StaticResource LabelTextBlock}"
                       TextAlignment="Center"
                       FontSize="10"
                       Margin="0,4"/>

            <!-- Control Buttons -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,8,0,0">
                <!-- Mute Button -->
                <Button Content="M"
                        Width="32"
                        Height="32"
                        Style="{StaticResource IconButton}"
                        Command="{Binding ToggleMuteCommand}"
                        Margin="2"
                        ToolTip="Mute">
                    <Button.Background>
                        <SolidColorBrush Color="{Binding IsMuted, Converter={StaticResource MuteColorConverter}, FallbackValue=#2A2A3C}"/>
                    </Button.Background>
                </Button>

                <!-- Solo Button -->
                <Button Content="S"
                        Width="32"
                        Height="32"
                        Style="{StaticResource IconButton}"
                        Command="{Binding ToggleSoloCommand}"
                        Margin="2"
                        ToolTip="Solo">
                    <Button.Background>
                        <SolidColorBrush Color="{Binding IsSoloed, Converter={StaticResource SoloColorConverter}, FallbackValue=#2A2A3C}"/>
                    </Button.Background>
                </Button>
            </StackPanel>

            <!-- Mapping Mode Indicator -->
            <Border Grid.Row="4"
                    Background="{DynamicResource AccentBrush}"
                    CornerRadius="4"
                    Padding="4"
                    Margin="0,8,0,0"
                    Visibility="{Binding IsInMappingMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="MAPPING..."
                           Style="{StaticResource LabelTextBlock}"
                           TextAlignment="Center"
                           FontSize="10"
                           Foreground="White"/>
            </Border>

            <!-- Mapping Button (shown on hover) -->
            <Button Grid.Row="0"
                    Grid.RowSpan="5"
                    Content="âš™"
                    Style="{StaticResource IconButton}"
                    Command="{Binding EnterMappingModeCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="4"
                    Opacity="0.5"
                    ToolTip="Map MIDI Control">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                               To="1"
                                               Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                               To="0.5"
                                               Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </Grid>
    </Border>
</UserControl>
