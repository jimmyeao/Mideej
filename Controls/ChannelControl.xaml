<UserControl x:Class="Mideej.Controls.ChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Mideej.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             Width="146"
             x:Name="ChannelControlRoot">
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Remove Channel"
                          Command="{Binding DataContext.RemoveChannelCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                          CommandParameter="{Binding}"/>
            </ContextMenu>
        </Grid.ContextMenu>
        
        <!-- Main Channel Card -->
        <Border Style="{StaticResource Card}" Margin="4,4,0,4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Channel Name and Assign Button -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Session Icon and Name -->
                    <Grid Grid.Row="0" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
               Text="{Binding SessionType, Converter={StaticResource SessionTypeIconConverter}}"
               FontSize="14"
               VerticalAlignment="Center"
               Margin="0,0,4,0"
               Visibility="{Binding SessionType, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <TextBlock Grid.Column="1"
               Text="{Binding Name}"
               Style="{StaticResource LabelTextBlock}"
               TextAlignment="Center"
               TextWrapping="Wrap"
               VerticalAlignment="Center"
               TextTrimming="CharacterEllipsis"
               MaxWidth="200"/>
                    </Grid>



                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0">
                        <Button Content="Assign..."
                                Style="{StaticResource IconButton}"
                                Command="{Binding AssignSessionCommand}"
                                FontSize="10"
                                Height="32"
                                Width="50"
                                Margin="0,0,4,0"
                                ToolTip="Assign audio session to this channel"/>
                        <Button Content="Clear"
                                Style="{StaticResource IconButton}"
                                Command="{Binding ClearSessionCommand}"
                                FontSize="10"
                                Height="31"
                                Width="40"
                                ToolTip="Remove assigned session from this channel"/>
                    </StackPanel>
                </Grid>

                <!-- VU Meter and Slider Container -->
                <Grid Grid.Row="1" Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- VU Meter -->
                    <local:VuMeter Grid.Column="0"
                                   PeakLevel="{Binding PeakLevel}"
                                   Width="30"/>

                    <!-- Volume Slider -->
                    <Slider Grid.Column="1"
                            Value="{Binding Volume, Mode=TwoWay}"
                            Style="{StaticResource ModernSlider}"
                            Orientation="Vertical"
                            Minimum="0"
                            Maximum="1"
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="False" Grid.ColumnSpan="2" Margin="2,37,10,36"/>
                </Grid>

                <!-- Volume Display -->
                <TextBlock Grid.Row="2"
                           Text="{Binding Volume, Converter={StaticResource PercentageConverter}}"
                           Style="{StaticResource LabelTextBlock}"
                           TextAlignment="Center"
                           FontSize="10"
                           Margin="0,4"/>

                <!-- Control Buttons -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0">
                    <!-- Mute Button -->
                    <Button Content="M"
                            Width="32"
                            Height="32"
                            Style="{StaticResource IconButton}"
                            Command="{Binding ToggleMuteCommand}"
                            Margin="2"
                            ToolTip="Mute"
                            Background="{Binding IsMuted, Converter={StaticResource MuteColorConverter}}"/>

                    <!-- Solo Button -->
                    <Button Content="S"
                            Width="32"
                            Height="32"
                            Style="{StaticResource IconButton}"
                            Command="{Binding ToggleSoloCommand}"
                            Margin="2"
                            ToolTip="Solo"
                            Background="{Binding IsSoloed, Converter={StaticResource SoloColorConverter}}"/>
                </StackPanel>

                <!-- Mapping Mode Indicator -->
                <Border Grid.Row="4"
                        Background="{DynamicResource AccentBrush}"
                        CornerRadius="4"
                        Padding="4"
                        Margin="0,8,0,0"
                        Visibility="{Binding IsInMappingMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="MAPPING..."
                               Style="{StaticResource LabelTextBlock}"
                               TextAlignment="Center"
                               FontSize="10"
                               Foreground="White"/>
                </Border>
            </Grid>
        </Border>

        <!-- Mapping Buttons Panel (overlay with higher Z-index) -->
        <StackPanel Panel.ZIndex="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,92,6,0"
                    Opacity="0.7"
                    x:Name="MappingButtonsPanel" Height="198">
            <StackPanel.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                           To="1"
                                           Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                           To="0.7"
                                           Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </StackPanel.Triggers>

            <Button Content="🎚"
                    Style="{StaticResource IconButton}"
                    Command="{Binding EnterMappingModeCommand}"
                    CommandParameter="Volume"
                    Width="33"
                    Height="34"
                    Margin="0,2"
                    FontSize="14"
                    ToolTip="Map Volume (Fader/Knob)"/>

            <Button Content="🔇"
                    Style="{StaticResource IconButton}"
                    Command="{Binding EnterMappingModeCommand}"
                    CommandParameter="Mute"
                    Width="33"
                    Height="35"
                    Margin="0,2"
                    FontSize="14"
                    ToolTip="Map Mute Button"/>

            <Button Content="🎵"
                    Style="{StaticResource IconButton}"
                    Command="{Binding EnterMappingModeCommand}"
                    CommandParameter="Solo"
                    Width="33"
                    Height="36"
                    Margin="0,2"
                    FontSize="14"
                    ToolTip="Map Solo Button"/>

            <Button Content="⏺"
                    Style="{StaticResource IconButton}"
                    Command="{Binding EnterMappingModeCommand}"
                    CommandParameter="Record"
                    Width="34"
                    Height="40"
                    Margin="0,2"
                    FontSize="14"
                    ToolTip="Map Record Button"/>

            <Button Content="▶"
                    Style="{StaticResource IconButton}"
                    Command="{Binding EnterMappingModeCommand}"
                    CommandParameter="Select"
                    Width="31"
                    Height="35"
                    Margin="0,2"
                    FontSize="14"
                    ToolTip="Map Select Button"/>
        </StackPanel>
    </Grid>
</UserControl>
