<UserControl x:Class="Mideej.Controls.ChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Mideej.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             Width="146"
             x:Name="ChannelControlRoot">
    <Grid Tag="{Binding Tag, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Grid.ContextMenu>
            <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                <MenuItem Header="Remove Channel"
                          Command="{Binding RemoveChannelCommand}"
                          CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
            </ContextMenu>
        </Grid.ContextMenu>

        <!-- Main Channel Card -->
        <Border Style="{StaticResource Card}" Margin="4,4,0,4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Channel Name and Assign Button -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Session Icon and Name (Fixed height for 2 lines) -->
                    <Grid Grid.Row="0" HorizontalAlignment="Center" Height="40" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
               Text="{Binding SessionType, Converter={StaticResource SessionTypeIconConverter}}"
               FontSize="14"
               VerticalAlignment="Center"
               Margin="0,0,4,0"
               Visibility="{Binding SessionType, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <TextBlock Grid.Column="1"
               Text="{Binding Name}"
               Style="{StaticResource LabelTextBlock}"
               TextAlignment="Center"
               TextWrapping="Wrap"
               VerticalAlignment="Center"
               TextTrimming="CharacterEllipsis"
               MaxWidth="120"
               MaxHeight="40"
               LineHeight="20"
               LineStackingStrategy="BlockLineHeight"/>
                    </Grid>



                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0">
                        <Button Content="Assign..."
                                Style="{StaticResource IconButton}"
                                Command="{Binding AssignSessionCommand}"
                                FontSize="10"
                                Height="32"
                                Width="50"
                                Margin="0,0,4,0"
                                ToolTip="Assign audio session to this channel"/>
                        <Button Content="Clear"
                                Style="{StaticResource IconButton}"
                                Command="{Binding ClearSessionCommand}"
                                FontSize="10"
                                Height="31"
                                Width="40"
                                ToolTip="Remove assigned session from this channel"/>
                    </StackPanel>
                </Grid>

                <!-- VU Meter and Slider Container -->
                <Grid Grid.Row="1" Margin="0,8,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <!-- VU Meter -->
                    <local:VuMeter Grid.Column="0"
                                   PeakLevel="{Binding PeakLevel}"
                                   HorizontalAlignment="Center"
                                   Width="30"/>

                    <!-- Volume Slider -->
                    <Slider Grid.Column="2"
                            Value="{Binding Volume, Mode=TwoWay}"
                            Style="{StaticResource ModernSlider}"
                            Orientation="Vertical"
                            Minimum="0"
                            Maximum="1"
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="False"
                            HorizontalAlignment="Center"/>
                </Grid>

                <!-- Volume Display -->
                <TextBlock Grid.Row="2"
                           Text="{Binding Volume, Converter={StaticResource PercentageConverter}}"
                           Style="{StaticResource LabelTextBlock}"
                           TextAlignment="Center"
                           FontSize="10"
                           Margin="0,4"/>

                <!-- Control Buttons -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0">
                    <!-- Mute Button -->
                    <Button Content="M"
                            Width="32"
                            Height="32"
                            Style="{StaticResource IconButton}"
                            Command="{Binding ToggleMuteCommand}"
                            Margin="2"
                            ToolTip="Mute"
                            Background="{Binding IsMuted, Converter={StaticResource MuteColorConverter}}"/>

                    <!-- Solo Button -->
                    <Button Content="S"
                            Width="32"
                            Height="32"
                            Style="{StaticResource IconButton}"
                            Command="{Binding ToggleSoloCommand}"
                            Margin="2"
                            ToolTip="Solo"
                            Background="{Binding IsSoloed, Converter={StaticResource SoloColorConverter}}"/>
                </StackPanel>

                <!-- Mapping Mode Indicator -->
                <Border Grid.Row="4"
                        Background="{DynamicResource AccentBrush}"
                        CornerRadius="4"
                        Padding="4"
                        Margin="0,8,0,0"
                        Visibility="{Binding IsInMappingMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="MAPPING..."
                               Style="{StaticResource LabelTextBlock}"
                               TextAlignment="Center"
                               FontSize="10"
                               Foreground="White"/>
                </Border>
            </Grid>
        </Border>

        <!-- Single Map Button with Context Menu -->
        <Button Panel.ZIndex="10"
                Content="🎹"
                Style="{StaticResource IconButton}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,65,0,0"
                Width="36"
                Height="32"
                FontSize="14"
                ToolTip="Map MIDI Controls..."
                x:Name="MapButton"
                Click="MapButton_Click">
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="🎚 Map Volume" 
                              Command="{Binding EnterMappingModeCommand}"
                              CommandParameter="Volume"/>
                    <MenuItem Header="🔇 Map Mute" 
                              Command="{Binding EnterMappingModeCommand}"
                              CommandParameter="Mute"/>
                    <MenuItem Header="🎵 Map Solo" 
                              Command="{Binding EnterMappingModeCommand}"
                              CommandParameter="Solo"/>
                    <MenuItem Header="⏺ Map Record" 
                              Command="{Binding EnterMappingModeCommand}"
                              CommandParameter="Record"/>
                    <MenuItem Header="▶ Map Select" 
                              Command="{Binding EnterMappingModeCommand}"
                              CommandParameter="Select"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
    </Grid>
</UserControl>
